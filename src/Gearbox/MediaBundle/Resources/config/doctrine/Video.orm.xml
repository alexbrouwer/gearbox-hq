<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity repository-class="Gearbox\MediaBundle\Entity\VideoRepository" name="Gearbox\MediaBundle\Entity\Video">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="name" type="string" column="name" length="255"/>
        <field name="description" type="string" column="description" length="255"/>
        <field name="releasedAt" type="datetimetz" column="releasedAt"/>
        <field name="createdAt" type="datetimetz" column="created_at"/>
        <field name="modifiedAt" type="datetimetz" column="modified_at"/>
        <field name="modifiedBy" type="string" column="modified_by" length="255"/>
        <field name="addedBy" type="string" column="added_by" length="255"/>

        <many-to-one target-entity="Gearbox\MediaBundle\Entity\Collection" field="collection">
        </many-to-one>
    </entity>
</doctrine-mapping>
