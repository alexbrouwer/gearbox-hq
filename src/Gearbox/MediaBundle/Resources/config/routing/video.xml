<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="collection_video" path="/">
        <default key="_controller">GearboxMediaBundle:Video:index</default>
    </route>

    <route id="collection_video_show" path="/{id}/show">
        <default key="_controller">GearboxMediaBundle:Video:show</default>
    </route>

    <route id="collection_video_new" path="/new">
        <default key="_controller">GearboxMediaBundle:Video:new</default>
    </route>

    <route id="collection_video_create" path="/create" methods="POST">
        <default key="_controller">GearboxMediaBundle:Video:create</default>
    </route>

    <route id="collection_video_edit" path="/{id}/edit">
        <default key="_controller">GearboxMediaBundle:Video:edit</default>
    </route>

    <route id="collection_video_update" path="/{id}/update" methods="POST|PUT">
        <default key="_controller">GearboxMediaBundle:Video:update</default>
    </route>

    <route id="collection_video_delete" path="/{id}/delete" methods="POST|DELETE">
        <default key="_controller">GearboxMediaBundle:Video:delete</default>
    </route>

</routes>
