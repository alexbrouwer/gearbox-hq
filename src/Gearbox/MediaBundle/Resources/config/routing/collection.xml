<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="media_collection" path="/">
        <default key="_controller">GearboxMediaBundle:Collection:index</default>
    </route>

    <route id="media_collection_show" path="/{id}/show">
        <default key="_controller">GearboxMediaBundle:Collection:show</default>
    </route>

    <route id="media_collection_new" path="/new">
        <default key="_controller">GearboxMediaBundle:Collection:new</default>
    </route>

    <route id="media_collection_create" path="/create" methods="POST">
        <default key="_controller">GearboxMediaBundle:Collection:create</default>
    </route>

    <route id="media_collection_edit" path="/{id}/edit">
        <default key="_controller">GearboxMediaBundle:Collection:edit</default>
    </route>

    <route id="media_collection_update" path="/{id}/update" methods="POST|PUT">
        <default key="_controller">GearboxMediaBundle:Collection:update</default>
    </route>

    <route id="media_collection_delete" path="/{id}/delete" methods="POST|DELETE">
        <default key="_controller">GearboxMediaBundle:Collection:delete</default>
    </route>

</routes>
