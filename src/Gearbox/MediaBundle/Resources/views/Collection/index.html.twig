{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Collection list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Parent</th>
                <th>Createdat</th>
                <th>Createdby</th>
                <th>Updatedat</th>
                <th>Updatedby</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('media_collection_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                <td>{% if entity.parent %}<a href="{{ path('media_collection_show', { 'id': entity.parent.id }) }}">{{ entity.parent }}</a>{% else %}<i>none</i>{% endif %}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.createdBy }}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.updatedBy }}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('media_collection_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('media_collection_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('media_collection_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
